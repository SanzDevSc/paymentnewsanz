<script>
/* COPY */
function copyDana(){
  navigator.clipboard.writeText("085718906011");
  alert("Nomor DANA disalin!");
}
function copyGopay(){
  navigator.clipboard.writeText("08xxxxxxxxxx");
  alert("Nomor GoPay disalin!");
}

/* PARTICLE FALLING */
const canvas=document.getElementById("particles");
const ctx=canvas.getContext("2d");
let w,h;

function resize(){
  w=canvas.width=window.innerWidth;
  h=canvas.height=window.innerHeight;
}
window.addEventListener("resize",resize);
resize();

const particles=[];
for(let i=0;i<90;i++){
  particles.push({
    x:Math.random()*w,
    y:Math.random()*h,
    r:Math.random()*2+1,
    s:Math.random()*1.5+0.5,
    o:Math.random()*0.6+0.2
  });
}

function animate(){
  ctx.clearRect(0,0,w,h);
  for(const p of particles){
    ctx.beginPath();
    ctx.fillStyle=`rgba(255,208,0,${p.o})`;
    ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
    ctx.fill();
    p.y+=p.s;
    if(p.y>h){
      p.y=-10;
      p.x=Math.random()*w;
    }
  }
  requestAnimationFrame(animate);
}
animate();
</script>

